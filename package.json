{
  "name": "tlbb-imperial-examination",
  "version": "1.0.0",
  "description": "天龙八部科举答题助手 - 通过OCR识别屏幕文字并匹配题库答案",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "tesseract.js": "^5.0.4",
    "screenshot-desktop": "^1.15.0",
    "sharp": "^0.33.1",
    "fuse.js": "^7.0.0"
  },
  "build": {
    "appId": "com.tlbb.examination",
    "productName": "天龙八部科举助手",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "contents": [
        { "x": 130, "y": 220 },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "questions/**/*"
    ],
    "extraResources": [
      {
        "from": "questions",
        "to": "questions"
      }
    ]
  }
}

