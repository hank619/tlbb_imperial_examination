{
  "name": "tlbb-assistant",
  "version": "1.1.1",
  "description": "天龙助手 - 天龙八部游戏辅助工具",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "rebuild": "electron-rebuild -f -w sharp,screenshot-desktop",
    "postinstall": "electron-rebuild -f -w sharp,screenshot-desktop",
    "prebuild": "yarn download-tessdata",
    "build": "electron-builder",
    "build:win": "yarn download-tessdata && electron-builder --win",
    "build:mac": "yarn download-tessdata && electron-builder --mac",
    "download-tessdata": "node scripts/download-tessdata.js"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "fuse.js": "^7.0.0",
    "screenshot-desktop": "^1.15.0",
    "sharp": "^0.33.1",
    "tesseract.js": "^5.0.4"
  },
  "build": {
    "appId": "com.tlbb.assistant",
    "productName": "天龙助手",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "questions/**/*"
    ],
    "asarUnpack": [
      "**/node_modules/sharp/**/*",
      "**/node_modules/@img/**/*",
      "**/node_modules/screenshot-desktop/**/*"
    ],
    "extraResources": [
      {
        "from": "questions",
        "to": "questions"
      },
      {
        "from": "assets/tessdata",
        "to": "tessdata"
      }
    ]
  }
}